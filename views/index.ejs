    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize carousel with autoplay
        document.addEventListener('DOMContentLoaded', function() {
            var myCarousel = document.querySelector('#heroCarousel');
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 5000,
                wrap: true
            });
            
            // Simple search functionality for demo purposes
            document.querySelector('.search-bar button').addEventListener('click', function() {
                var searchTerm = document.querySelector('.search-bar input').value.toLowerCase();
                var cards = document.querySelectorAll('.destination-card');
                
                cards.forEach(function(card) {
                    var title = card.querySelector('.destination-card-title').textContent.toLowerCase();
                    var text = card.querySelector('.destination-card-text').textContent.toLowerCase();
                    
                    if (title.includes(searchTerm) || text.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
            
            // Show all destinations page if URL has hash
            if (window.location.hash === '#all-destinations') {
                document.querySelector('#all-destinations-page').style.display = 'block';
                document.querySelector('main').style.display = 'none';
            }
        });
    </script>
