                "https://images.unsplash.com/photo-1542272201-b1ca555f8505?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1887&q=80",
                "https://images.unsplash.com/photo-1569319438169-01a462a5b6c2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
            ];
            
            // Initialize main panorama
            document.getElementById('main360Modal').addEventListener('shown.bs.modal', function() {
                pannellum.viewer('panorama-main', {
                    "type": "equirectangular",
                    "panorama": panoramaImages[0],
                    "autoLoad": true,
                    "showControls": true,
                    "hotSpotDebug": false
                });
            });
            
            // Initialize gallery panoramas
            galleryModals.forEach((modal, index) => {
                document.getElementById(modal._element.id).addEventListener('shown.bs.modal', function() {
                    pannellum.viewer('panorama-' + modal._element.id.replace('Modal', ''), {
                        "type": "equirectangular",
                        "panorama": panoramaImages[index],
                        "autoLoad": true,
                        "showControls": true,
                        "hotSpotDebug": false
                    });
                });
            });
            
            // Clean up viewers when modals are closed
            document.querySelectorAll('.modal-360').forEach(modal => {
                modal.addEventListener('hidden.bs.modal', function() {
                    const panoramaId = this.querySelector('[id^="panorama-"]').id;
                    document.getElementById(panoramaId).innerHTML = '';
                });
            });
            
            // Initialize map
            const map = L.map('locationMap').setView([17.2765, 121.1625], 13);
            
